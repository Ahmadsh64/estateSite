---
import i18next from '../i18n.js';

export interface Props {
  title: string;
  icon?: string;
  showAddBtn?: boolean;
  showContactBtn?: boolean;
  showBackBtn?: boolean;
  backUrl?: string;
}

const { 
  title, 
  icon = "🏘️",
  showAddBtn = false,
  showContactBtn = false,
  showBackBtn = false,
  backUrl = "/admin/dashboard"
} = Astro.props;
---

<header class="admin-header">
  <div class="logo">
    <img src="/images/logo.png" alt={i18next.t("property.title")} />
    <span>{i18next.t("property.title")}</span>
  </div>
  <div class="admin-header-content">
    <h1 class="admin-title">
      <span class="admin-icon">{icon}</span>
      {title}
    </h1>
    <nav class="admin-nav">
      {showAddBtn && (
        <a href="/admin/add" class="admin-nav-btn add-btn">
          <span class="btn-icon">➕</span>
          {i18next.t("admin.addNewProperty")}
        </a>
      )}
      {showContactBtn && (
        <a href="/admin/contact-requests" class="admin-nav-btn contact-btn">
          <span class="btn-icon">📧</span>
          בקשות יצירת קשר
        </a>
      )}
      {showBackBtn && (
        <a href={backUrl} class="admin-nav-btn back-btn">
          <span class="btn-icon">⬅️</span>
          {i18next.t("admin.backToDashboard")}
        </a>
      )}
      <a href="/" class="admin-nav-btn home-btn">
        <span class="btn-icon">🏠</span>
        {i18next.t("admin.backToHome")}
      </a>
      <button id="logout-btn" class="admin-nav-btn logout-btn">
        <span class="btn-icon">🚪</span>
        {i18next.t("admin.logout")}
      </button>
    </nav>
  </div>
</header>

