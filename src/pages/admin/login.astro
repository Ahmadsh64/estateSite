<html lang="he">
<head>
  <meta charset="UTF-8"/>
  <title>כניסת אדמין</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body dir="rtl">
  <main class="admin-login-main">
    <h1 class="admin-login-title">🔑 כניסת אדמין</h1>
    <form id="admin-login-form" class="admin-login-form">
      <div class="admin-login-field">
        <label>אימייל:</label><br/>
        <input type="email" name="email" class="admin-login-input" required />
      </div>
      <div class="admin-login-field">
        <label>סיסמה:</label><br/>
        <input type="password" name="password" class="admin-login-input" required />
      </div>
      <button type="submit" class="admin-login-btn">כניסה</button>
    </form>
    <p id="login-message" class="admin-login-message"></p>
  </main>

  <script type="module">
    import { createClient } from 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js/+esm';

    const supabase = createClient(
      'https://uhvdtumhgllcypfoogdy.supabase.co',
      'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InVodmR0dW1oZ2xsY3lwZm9vZ2R5Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTcyNTI5MDAsImV4cCI6MjA3MjgyODkwMH0.Dm4oLq302u7qV2R6srF8ejBoxuYE2LfdMFSpcM2g9as' // השתמש במפתח ה-PUBLIC_ANON שלך
    );

    const form = document.getElementById('admin-login-form');
    const message = document.getElementById('login-message');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const email = form.email.value;
      const password = form.password.value;

      // --- התחברות ל-Supabase ---
      const { data, error } = await supabase.auth.signInWithPassword({ email, password });

      if (error || !data.session) {
        message.textContent = `❌ שגיאה: ${error?.message || 'כניסה נכשלה'}`;
        message.style.color = "red";
        return;
      }

      const session = data.session;
      const accessToken = session.access_token;

      // --- שמירה ב-sessionStorage כדי שה-API יוכל להשתמש בו ---
      sessionStorage.setItem("sb-session", accessToken);

      // --- בדיקה אם המשתמש הוא אדמין (role) ---
      const { data: userRoleData, error: roleError } = await supabase
        .from('users')
        .select('role')
        .eq('id', session.user.id)
        .single();

      if (roleError || userRoleData?.role !== 'admin') {
        message.textContent = "❌ אין לך הרשאות אדמין";
        message.style.color = "red";
        await supabase.auth.signOut();
        sessionStorage.removeItem("sb-session");
        return;
      }

      message.textContent = "✅ כניסה בוצעה בהצלחה, מועבר ללוח הבקרה...";
      message.style.color = "green";

      // --- מעבר ללוח הבקרה אחרי חצי שניה ---
      setTimeout(() => {
        window.location.href = "/admin/dashboard";
      }, 500);
    });

    // --- פונקציה עזר לאחזור ה-token מכל קובץ JS ---
    export function getAccessToken() {
      return sessionStorage.getItem("sb-session") || null;
    }
  </script>
</body>
</html>