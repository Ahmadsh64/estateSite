---
import i18next from '../../i18n.js';
---
<html lang="he">
<head>
  <meta charset="UTF-8"/>
  <title>{i18next.t("admin.login")}</title>
  <link rel="stylesheet" href="/styles.css">
  <script src="/js/i18n.js" is:inline></script>
</head>
<body dir="rtl">
  <header class="main-header">
    <div class="header-container">
      <nav class="main-nav">
        <a href="/" class="nav-btn">
          <span class="btn-icon">🏠</span>
          {i18next.t("admin.backToHome")}
        </a>
      </nav>
      <div class="logo">
        <img src="/images/logo.png" alt={i18next.t("property.title")} />
        <span class="logo-text">{i18next.t("property.title")}</span>
      </div>
    </div>
  </header>

  <main style="max-width:400px; margin:auto; padding:2rem; text-align:center;">
    <h1 style="display:flex; align-items:center; justify-content:center; gap:0.5rem;">
      <span>🔑</span>
      {i18next.t("admin.login")}
    </h1>
    <form id="loginForm">
      <div style="margin:1rem 0;">
        <label>{i18next.t("admin.email")}</label><br/>
        <input type="email" name="email" required style="width:100%; padding:0.5rem;" />
      </div>
      <div style="margin:1rem 0;">
        <label>{i18next.t("admin.password")}</label><br/>
        <input type="password" name="password" required style="width:100%; padding:0.5rem;" />
      </div>
      <button type="submit" style="padding:0.5rem 1rem;">{i18next.t("admin.loginButton")}</button>
    </form>
    <p id="loginMessage" style="color:red; margin-top:1rem;"></p>
  </main>

<script type="module">
  import { createClient } from 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js/+esm';
  import { SUPABASE_URL, SUPABASE_ANON_KEY } from '/js/supabase-config.js';

  const supabase = createClient(SUPABASE_URL, SUPABASE_ANON_KEY);


  const form = document.getElementById('loginForm');
  const msg = document.getElementById('loginMessage');

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    msg.textContent = "";

    const email = form.email.value.trim();
    const password = form.password.value;

    if (!email || !password) {
      msg.textContent = "❌ " + window.i18next.t("common.errors.fillAllFields");
      return;
    }

    try {
      const { data, error } = await supabase.auth.signInWithPassword({ email, password });

      if (error) {
        console.error(window.i18next.t("common.errors.loginError"), error.message);
        msg.textContent = "❌ " + window.i18next.t("common.errors.loginError") + ": " + error.message;
        return;
      }

      if (!data.session) {
        msg.textContent = "❌ " + window.i18next.t("common.errors.noSession");
        return;
      }

      // קבלת נתוני המשתמש לאחר ההתחברות
      const { data: user, error: userError } = await supabase.auth.getUser();

      if (userError || !user) {
        msg.textContent = "❌ " + window.i18next.t("common.errors.userError");
        return;
      }

      console.log('User Data:', user); // הדפסת נתוני המשתמש

      // בדיקת הרשאות מנהל - בדיקה ב-user_metadata
      console.log("User data:", user.user);
      console.log("User role:", user.user?.role);
      
      // זמנית - מאפשר התחברות לכל משתמש
      // if (user.user?.role !== 'admin') {
      //   msg.textContent = i18next.t("admin.noPermissions");
      //   return;
      // }

      // שמירת session ב-sessionStorage
      sessionStorage.setItem("sb-session", JSON.stringify(data.session));

      // הפנייה לדשבורד
      window.location.href = "/admin/dashboard";

    } catch (err) {
      console.error(window.i18next.t("common.errors.serverError"), err);
      msg.textContent = "❌ " + window.i18next.t("common.errors.serverError");
    }
  });
</script>

</body>
</html>