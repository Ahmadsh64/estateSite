import i18next from "../i18n";
import { supabase } from "../lib/supabaseClient";
import type { Property } from "../types/property";  // ייבוא הטיפוס

// שליפת ערים וכלל הנתונים
let availableCities: string[] = [];
let availableBedrooms: number[] = [2, 3, 4, 5];
let availableAmenities: string[] = ["מכונת כביסה", "WiFi", "חניה", "טלוויזיה"];

const { data: citiesData, error: citiesError } = await supabase
  .from("properties")
  .select("city");

if (!citiesError && citiesData) {
  availableCities = [...new Set(citiesData.map((item: any) => item["city"]))];
}

let properties: Property[] = [];  // הגדרת טיפוס למשתנה
const url = new URL(Astro.request.url);
const selectedRooms = url.searchParams.get("rooms");
const selectedAmenities = url.searchParams.getAll("amenities");
const selectedLocation = url.searchParams.get("location");

let query = supabase
  .from("properties")
  .select("*")
  .eq("is_active", true)
  .order("created_at", { ascending: false });

if (selectedRooms) {
  if (selectedRooms === "5+") {
    query = query.gte("bedrooms", 5);
  } else {
    query = query.eq("bedrooms", Number(selectedRooms));
  }
}

if (selectedLocation) {
  query = query.eq("city", selectedLocation);
}

if (selectedAmenities.length > 0) {
  selectedAmenities.forEach((amenity) => {
    if (amenity === "מכונת כביסה") query = query.eq("washingMachine", true);
    if (amenity === "WiFi") query = query.eq("wifi", true);
    if (amenity === "חניה") query = query.eq("parking", true);
    if (amenity === "טלוויזיה") query = query.eq("tv", true);
  });
}

const { data, error } = await query;

if (!error && data) {
  properties = data as Property[];  // המרת הנתונים לטיפוס Property[]
} else {
  console.error("שגיאה בשליפת הדירות:", error?.message);
}
---

<html lang="he">
  <head>
    <meta charset="UTF-8" />
    <title>{i18next.t("property.title")}</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body dir="rtl">
    <header>
      <div class="logo">
        <img src="/images/logo.png" alt={i18next.t("property.title")} />
        <span>{i18next.t("property.title")}</span>
      </div>
      <nav>
        <a href="/">{i18next.t("search.rooms")}</a>
      </nav>
      <a href="/admin/login" class="admin-btn">{i18next.t("admin.login")}</a>
    </header>

    <section class="hero">
      <div class="overlay">
        <h1>{i18next.t("search.title")}</h1>
        <p>{i18next.t("search.description")}</p>
        <form class="filters" action="/" method="get">
          <select name="rooms">
            <option value="">{i18next.t("search.rooms")}</option>
            {
              availableBedrooms.map((room) => (
                <option value={room}>{room}</option>
              ))
            }
            <option value="5+">5+</option>
          </select>

          <select name="location">
            <option value="">{i18next.t("search.location")}</option>
            {
              availableCities.map((city) => (
                <option value={city}>{city}</option>
              ))
            }
          </select>

          <div>
            <label>{i18next.t("search.amenities")}:</label>
            <label
              ><input type="checkbox" name="amenities" value="מכונת כביסה" />
              {i18next.t("property.washingMachine")}</label
            >
            <label
              ><input type="checkbox" name="amenities" value="WiFi" />
              {i18next.t("property.wifi")}</label
            >
            <label
              ><input type="checkbox" name="amenities" value="חניה" />
              {i18next.t("property.parking")}</label
            >
            <label
              ><input type="checkbox" name="amenities" value="טלוויזיה" />
              {i18next.t("property.tv")}</label
            >
          </div>

          <button type="submit">{i18next.t("search.searchButton")}</button>
        </form>
      </div>
    </section>

    <main>
      <ul class="home-property-list">
        {
          properties.map((p: Property) => (
            <li class="home-property-item">
              <a href={`/${p.id}`}>
                <div class="home-property-images">
                  <img
                    loading="lazy"
                    src={p.images[0] || "/images/default.jpg"}
                    alt={p.title}
                  />
                </div>
                <h2 class="home-property-title">{p.title}</h2>
                <p class="home-property-price">
                  {i18next.t("property.price")}:{" "}
                  {p.price.toLocaleString("he-IL")}
                </p>
                <p class="home-property-location">
                  {p.location?.city || ""} {p.location?.street || ""}{" "}
                  {p.location?.number || ""}
                  {p.location?.floor ? `, קומה ${p.location.floor}` : ""}
                </p>

                <p class="home-property-details">
                  {[{
                    key: "bedrooms",
                    label: i18next.t("property.rooms"),
                    value: p.bedrooms,
                  },
                  {
                    key: "washingMachine",
                    label: i18next.t("property.washingMachine"),
                    value: p.washingMachine ? "✔️" : "❌",
                  },
                  {
                    key: "wifi",
                    label: i18next.t("property.wifi"),
                    value: p.wifi ? "✔️" : "❌",
                  },
                  {
                    key: "parking",
                    label: i18next.t("property.parking"),
                    value: p.parking ? "✔️" : "❌",
                  },
                  {
                    key: "tv",
                    label: i18next.t("property.tv"),
                    value: p.tv ? "✔️" : "❌",
                  }].map((feature) =>
                    feature.value ? (
                      <span>
                        {feature.label}: {feature.value} |{" "}
                      </span>
                    ) : null,
                  )}
                </p>
              </a>
            </li>
          ))
        }
      </ul>
    </main>
  </body>
</html>
